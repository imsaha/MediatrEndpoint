<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Authors>imsaha</Authors>
        <PackageId>FastEndpoints.MediatR</PackageId>
        <PackageTags>FastEndpoints; MediatR; Endpoints;</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/imsaha/MediatrEndpoint</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageDescription>Combines MediatR and FastEndpoint for quickly generating API endpoints from MediatR Requests</PackageDescription>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MediatR" Version="12.3.0"/>
        <PackageReference Include="FastEndpoints" Version="5.26.0"/>
        <PackageReference Include="FastEndpoints.Swagger" Version="5.26.0"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
